<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <RelativeLayout
        android:id="@+id/rl_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_activity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/txt_title_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:layout_toRightOf="@+id/img_activity"
            android:layout_marginBottom="10dp"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_toRightOf="@+id/img_activity"
            android:layout_below="@id/txt_title_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickWaze"
                android:text="Waze" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickGoogle"
                android:text="Google" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_address"
        android:layout_below="@+id/rl_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:textSize="12sp" />

    <fragment
        android:id="@+id/map_view"
        android:layout_below="@id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment" />

</RelativeLayout>